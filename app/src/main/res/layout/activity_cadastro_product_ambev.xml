<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".presenter.CadastroBarAmbev">

    <EditText
        android:id="@+id/etCadastroBarNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Nome fantasia"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome fantasia do bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Cadastre o barzinho,"
        android:textColor="@color/design_default_color_primary"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e bora tomar uma :)"
        android:textColor="#0F2794"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ScrollView
        android:id="@+id/svCadastroBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCadastroBarNome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5000dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Inserir endereço do estabelecimento" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Insira seu cep" />

                <EditText
                    android:id="@+id/etCadastroBarCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="CEP"
                    android:inputType="number|textPersonName"
                    android:maxLength="8" />

                <Button
                    android:id="@+id/btCadastroBarPreencher"
                    android:layout_width="181dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_rounded"
                    android:text="Preencher campos" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Número" />

                <EditText
                    android:id="@+id/etCadastroBarNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Número"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Estado" />

                <EditText
                    android:id="@+id/etCadastroBarEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Estado"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cidade" />

                <EditText
                    android:id="@+id/etCadastroBarCidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Cidade"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bairro" />

                <EditText
                    android:id="@+id/etCadastroBarBairro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Bairro"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Logradouro" />

                <EditText
                    android:id="@+id/etCadastroBarLogradouro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Logradouro"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Complemento" />

                <EditText
                    android:id="@+id/etCadastroBarComplemento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Complemento"
                    android:inputType="textPersonName" />

                <CheckBox
                    android:id="@+id/cbBrahmaLata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brahma Lata" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budweiser Lata" />

                <CheckBox
                    android:id="@+id/cbCoronaLongNeck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Corona Long Neck" />

                <CheckBox
                    android:id="@+id/cbGuaranaLata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guarana Lata" />

                <CheckBox
                    android:id="@+id/cbH2OGarrafa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="H2O Garrafa" />

                <CheckBox
                    android:id="@+id/cbPatagonia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox" />

                <CheckBox
                    android:id="@+id/cbPepsiLata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pepsi Lata" />

                <CheckBox
                    android:id="@+id/cbSkolLata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skol Lata" />

                <CheckBox
                    android:id="@+id/cbStella"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stella" />

                <CheckBox
                    android:id="@+id/cbSukita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sukita" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>