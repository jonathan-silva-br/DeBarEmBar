<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.ListarBares">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="40dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_filtro"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@mipmap/user_logo_foreground" />

            <EditText
                android:id="@+id/etBuscarBar"
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/edit_rounded"
                android:hint="Pesquise pelo nome do bar."
                android:focusable="false"

                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="12dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewListBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="2dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>